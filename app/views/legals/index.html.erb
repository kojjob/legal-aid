<p id="notice"><%= notice %></p>

<h1>Legals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Report</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @legals.each do |legal| %>
      <tr>
        <td><%= legal.title %></td>
        <%= time_ago_in_words(legal.created_at) %> ago
        <td><%= truncate(legal.report, length:90) %></td>
        <td><%= link_to 'Show', legal %></td>
        <td><%= link_to 'Edit', edit_legal_path(legal) %></td>
        <td><%= link_to 'Destroy', legal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

