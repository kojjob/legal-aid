<%= form_for([@legal, @legal.comments.build]) do |f| %>

  <div class="form-group">
    <%= f.label :Comment  %> <br>
    <%= f.text_field :commenter, class: "form-group" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', required: true %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-info btn-xs' %>
  </div>

<% end %>

 